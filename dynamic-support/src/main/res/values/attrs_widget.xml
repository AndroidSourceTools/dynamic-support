<resources>

    <!-- Attributes for the DynamicPageIndicator. -->
    <declare-styleable name="DynamicPageIndicator">
        <!-- Diameter of the indicator dots. -->
        <attr name="ads_dotDiameter" format="dimension" />
        <!-- Gap between the indicator dots. -->
        <attr name="ads_dotGap" format="dimension" />
        <!-- Animation duration for the dot indicators. -->
        <attr name="ads_animationDuration" format="integer" />
        <!-- Color for the page indicators. -->
        <attr name="ads_pageIndicatorColor" format="color" />
        <!-- Color for the current page indicator. -->
        <attr name="ads_currentPageIndicatorColor" format="color" />
    </declare-styleable>

</resources>