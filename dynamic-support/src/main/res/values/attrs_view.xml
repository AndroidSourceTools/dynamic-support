<resources>

    <!-- Attributes for the DynamicCardView. -->
    <declare-styleable name="DynamicCardView">
        <!-- Color for the card background. -->
        <attr name="ads_cardBackgroundColor" format="color" />
        <!-- Corner radius for the card view. -->
        <attr name="ads_cardCornerRadius" format="dimension" />
        <!-- Elevation for the card view. -->
        <attr name="ads_cardElevation" format="dimension" />
    </declare-styleable>

    <!-- Attributes for the DynamicInfo. -->
    <declare-styleable name="DynamicInfo">
        <!-- Drawable that will be applied to this view. -->
        <attr name="ads_dynamicInfo_icon" format="reference" />
        <!-- Title that will be applied to this view. -->
        <attr name="ads_dynamicInfo_title" format="string" />
        <!-- Subtitle that will be applied to this view. -->
        <attr name="ads_dynamicInfo_subtitle" format="string" />
        <!-- Optional description that will be applied to this view. -->
        <attr name="ads_dynamicInfo_description" format="string" />
        <!-- Optional big drawable that will be applied to this view. -->
        <attr name="ads_dynamicInfo_iconBig" format="reference" />
        <!-- Optional icon color that will be applied to this view. -->
        <attr name="ads_dynamicInfo_color" format="reference" />
        <!-- Optional icon color type that will be applied to this view. -->
        <attr name="ads_dynamicInfo_colorType" format="enum">
            <!-- Constant for the no color. -->
            <enum name="none" value="0" />
            <!-- Constant for the primary color. -->
            <enum name="primary" value="1" />
            <!-- Constant for the dark primary color. -->
            <enum name="primary_dark" value="2" />
            <!-- Constant for the accent color. -->
            <enum name="accent" value="3" />
            <!-- Constant for the dark accent color. -->
            <enum name="accent_dark" value="4" />
            <!-- Constant for the primary tint color. -->
            <enum name="tint_primary" value="5" />
            <!-- Constant for the dark primary tint color. -->
            <enum name="tint_primary_dark" value="6" />
            <!-- Constant for the accent tint color. -->
            <enum name="tint_accent" value="7" />
            <!-- Constant for the dark accent tint color. -->
            <enum name="tint_accent_dark" value="8" />
            <!-- Constant for the custom color. It must be supplied via
                 ads_contrastWithColor attribute. -->
            <enum name="custom" value="9" />
        </attr>
        <!-- true to show the divider below this view. -->
        <attr name="ads_dynamicInfo_showDivider" format="boolean" />
        <!-- Links array that will be applied to this view. -->
        <attr name="ads_dynamicInfo_links" format="reference" />
        <!-- Optional links subtitle array that will be applied to this
             view. -->
        <attr name="ads_dynamicInfo_linksSubtitles" format="reference" />
        <!-- Optional links icon array that will be applied to this view. -->
        <attr name="ads_dynamicInfo_linksIcons" format="reference" />
        <!-- Links url array that will be applied to this view. -->
        <attr name="ads_dynamicInfo_linksUrls" format="reference" />
        <!-- Optional links color array that will be applied to this view. -->
        <attr name="ads_dynamicInfo_linksColors" format="reference" />
    </declare-styleable>

    <!-- Attributes for the DynamicHeader. -->
    <declare-styleable name="DynamicHeader">
        <!-- Drawable that will be applied to this header. -->
        <attr name="ads_dynamicHeader_icon" format="reference" />
        <!-- Title that will be applied to this header. -->
        <attr name="ads_dynamicHeader_title" format="string" />
        <!-- Subtitle that will be applied to this header. -->
        <attr name="ads_dynamicHeader_subtitle" format="string" />
        <!-- true to display the icon. -->
        <attr name="ads_dynamicHeader_showIcon" format="boolean" />
    </declare-styleable>

    <!-- Attributes for the DynamicPreference. -->
    <declare-styleable name="DynamicPreference">
        <!-- Drawable that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_icon" format="reference" />
        <!-- Title that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_title" format="string" />
        <!-- Optional summary that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_summary" format="string" />
        <!-- Optional description that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_description" format="string" />
        <!-- Default preference value that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_value" format="string" />
        <!-- Shared preference key that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_key" format="string" />
        <!-- true to disable this preference by default. -->
        <attr name="ads_dynamicPreference_enabled" format="boolean" />
        <!-- Shared preference key of other preference to make it dependent
             on that preference. -->
        <attr name="ads_dynamicPreference_dependency" format="string" />
        <!-- true to make this preference checked by default. -->
        <attr name="ads_dynamicPreference_checked" format="boolean" />
        <!-- Optional summary to show if the preference is in the
             unchecked state. -->
        <attr name="ads_dynamicPreference_unchecked" format="string" />
        <!-- Maximum value that will be applied to the seek bar. -->
        <attr name="ads_dynamicPreference_max" format="integer" />
        <!-- Minimum value that will be applied to the seek bar. -->
        <attr name="ads_dynamicPreference_min" format="integer" />
        <!-- Progress value that will be applied to the seek bar. -->
        <attr name="ads_dynamicPreference_progress" format="integer" />
        <!-- Progress interval that will be applied to the seek bar. -->
        <attr name="ads_dynamicPreference_interval" format="integer" />
        <!-- Optional text which will be shown after the progress value. -->
        <attr name="ads_dynamicPreference_unit" format="string" />
        <!-- true to show the optional seek bar controls to increment or
             decrement the seek bar value by one. -->
        <attr name="ads_dynamicPreference_controls" format="boolean" />
        <!-- Preference entries that will be used by this preference. -->
        <attr name="ads_dynamicPreference_entries" format="reference" />
        <!-- Preference values that will be used by this preference. -->
        <attr name="ads_dynamicPreference_values" format="reference" />
        <!-- Image drawable that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_image" format="reference" />
        <!-- Color that will be applied to this preference. -->
        <attr name="ads_dynamicPreference_color" format="color" />
        <!-- True to enable quick for the supported preferences. -->
        <attr name="ads_dynamicPreference_popup" format="boolean" />
        <!-- View types supported by the popup. -->
        <attr name="ads_dynamicPreference_popupType" format="enum">
            <!-- Constant for default view type. -->
            <enum name="none" value="-1" />
            <!-- Constant for list view type. -->
            <enum name="list" value="0" />
            <!-- Constant for grid view type. -->
            <enum name="grid" value="1" />
        </attr>
    </declare-styleable>

    <!-- Attributes for the DynamicColorView. -->
    <declare-styleable name="DynamicColorView">
        <!-- Shape options for the dynamic color view. -->
        <attr name="ads_dynamicColorView_shape" format="enum">
            <!-- Constant for the circle color shape. -->
            <enum name="circle" value="0" />
            <!-- Constant for the square color shape. -->
            <enum name="square" value="1" />
            <!-- Constant for the rectangle color shape. -->
            <enum name="rectangle" value="2" />
        </attr>
        <!-- Color value for the dynamic color view. -->
        <attr name="ads_dynamicColorView_color" format="color" />
        <!-- True to enable alpha for the color. -->
        <attr name="ads_dynamicColorView_alpha" format="boolean" />
    </declare-styleable>

    <!-- Attributes for the DynamicColorPicker. -->
    <declare-styleable name="DynamicColorPicker">
        <!-- An array of colors to be displayed in the picker. -->
        <attr name="ads_dynamicColorPicker_colors" format="reference" />
        <!-- True to enable alpha for the colors. -->
        <attr name="ads_dynamicColorPicker_alpha" format="boolean" />
    </declare-styleable>

</resources>