<com.pranavpandey.android.dynamic.support.widget.DynamicCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ads_info_layout"
    style="@style/Widget.DynamicApp.Card.Clickable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/Widget.DynamicApp.Content.Card">

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/ads_info_icon"
            android:layout_width="@dimen/ads_icon_avatar_card"
            android:layout_height="@dimen/ads_icon_avatar_card"
            android:layout_marginRight="@dimen/ads_icon_avatar_card_margin_end"
            android:layout_marginEnd="@dimen/ads_icon_avatar_card_margin_end"
            android:layout_gravity="center_vertical"
            app:ads_colorType="primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/ads_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.DynamicApp.Headline5.Card" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/ads_info_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.DynamicApp.Subtitle1.Caps" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ads_info_status_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.DynamicApp.Subtitle1.Secondary" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ads_info_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ads_margin_tiny"
                style="@style/TextAppearance.DynamicApp.Body1" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/ads_info_status"
                android:layout_marginTop="@dimen/ads_margin_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/ads_font_size_medium"
                app:ads_colorType="accent"
                style="@style/TextAppearance.DynamicApp.Subtitle1.Caps" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/ads_icon_card_permission_frame"
        android:layout_height="@dimen/ads_icon_card_permission_frame"
        android:layout_gravity="end|bottom">

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            android:id="@+id/ads_info_icon_big"
            android:layout_width="@dimen/ads_icon_card_permission"
            android:layout_height="@dimen/ads_icon_card_permission"
            style="@style/Widget.DynamicApp.Image.Card.Big" />

    </FrameLayout>

</com.pranavpandey.android.dynamic.support.widget.DynamicCardView>