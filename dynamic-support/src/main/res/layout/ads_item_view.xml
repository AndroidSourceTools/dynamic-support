<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ads_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Widget.DynamicApp.Content.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <com.pranavpandey.android.dynamic.support.widget.DynamicImageView
            style="@style/Widget.DynamicApp.Image.Preference"
            android:id="@+id/ads_item_view_icon"
            app:ads_colorType="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                android:id="@+id/ads_item_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.DynamicApp.Subtitle1.Caps" />

            <com.pranavpandey.android.dynamic.support.widget.DynamicTextView
                style="@style/TextAppearance.DynamicApp.Body1"
                android:id="@+id/ads_item_view_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/ads_item_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ads_margin_divider"
        android:layout_marginLeft="@dimen/ads_icon_avatar_card_divider_medium"
        android:layout_marginStart="@dimen/ads_icon_avatar_card_divider_medium"
        android:background="?android:attr/dividerHorizontal" />

</LinearLayout>
